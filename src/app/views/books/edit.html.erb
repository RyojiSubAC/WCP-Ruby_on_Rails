<div class = "col-md-6 col-md-ofsset-3" style = "margin-left: 25%" >
    <h1>Editing Book</h1>
    <div class = "form-body">
        <%= form_with(model: @book, local: true) do |f|%>
            <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@book.errors.count, "error") %>
                prohibited this book from being saved:</h2>

                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>
            <div class = "field row" style = "margin-bottom: 10px">
                <%= f.label :title %>
                    <%= f.text_field :title, class: "col-xs-12 title" %>
            </div>
            <div class = "field row" style = "margin-bottom: 10px">
                <%= f.label :opinion %>
                    <%= f.text_area :body, class: "col-xs-12 body" %>
            </div>
            <div class = "actions row" style = "margin-bottom: 10px">
                <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
            </div>
        <% end %>
        <%= link_to "Show", book_path, class: "book_#{@book.id}"%>
        |
        <%= link_to "Back", books_path, class: "back_#{@book.id}"%>
    </div>
    <div class = "col-md-3"></div>
</div>
